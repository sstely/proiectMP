@page
@model proiectMP.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete Reservation";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete Reservation</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Client Name</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Client.FullName)
        </dd>

        <dt class="col-sm-2">Number of People</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.NumberPeople)
        </dd>

        <dt class="col-sm-2">Reservation Date</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.ReservationDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to Reservations</a>
    </form>
</div>
