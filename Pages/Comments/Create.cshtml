@page
@model proiectMP.Pages.Comments.CreateModel

@{
    ViewData["Title"] = "Add Review";
}

<h1>Add New Review</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3 mt-3">
                <label asp-for="Comment.Text" class="control-label"></label>
                <textarea asp-for="Comment.Text" class="form-control"></textarea>
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Reviews</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
