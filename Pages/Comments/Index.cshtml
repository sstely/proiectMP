@page
@model proiectMP.Pages.Comments.IndexModel

@{
    ViewData["Title"] = "Reviews";
}

<h1>What Does Our Clients Say About Our Restaurant?</h1>

<p>
    <a asp-page="Create">Leave a Review</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Client)
            </th>
            <th></th>
            <th>Posted On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>

            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            }

        </tr>
}
    </tbody>
</table>
