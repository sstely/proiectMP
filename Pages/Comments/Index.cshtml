@page
@model proiectMP.Pages.Comments.IndexModel

@{
    ViewData["Title"] = "Reviews";
}

<h1>What Does Our Clients Say About Our Restaurant?</h1>

<p>
    <a asp-page="Create">Leave a Review</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].PostDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
